@page "{id}"
@using ContosoCrafts.WebSite.Services
@inject JsonFileProductService ProductService
@model ContosoCrafts.WebSite.Pages.Product.DeleteModel
@{
    ViewData["Title"] = "Delete Page";
}

<body class="crud">

    <h1>Delete</h1>

    <div class="container">
        <form method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(x => x.Product.Id)

            <div class="form-group">
                <label class="control-label" asp-for="Product.Title">Title</label>
                <input disabled="" class="form-control" asp-for="Product.Title">
            </div>


            <div class="form-group">
                <label class="control-label" asp-for="Product.Url">Url</label>
                <input disabled="" class="form-control" asp-for="Product.Url">
            </div>

            <div class="form-group">
                <label class="control-label" asp-for="Product.Image">Image</label>
                <input disabled="" class="form-control" asp-for="Product.Image">
            </div>

            <div class="form-group">
                <label class="control-label" asp-for="Product.Description">Description</label>
                <input disabled="" class="form-control" asp-for="Product.Description">
            </div>

            <h1>Confirm Delete of this Item</h1>

            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary">
            </div>

        </form>
    </div>

</body>